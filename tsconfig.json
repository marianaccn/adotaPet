{
  "compilerOptions": {
    "target": "es2016" /* Set the JavaScript language version for emitted */,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ] /* Specify a set of bundled library declaration files that describe the target runtime environment. */,
    "module": "esnext" /* Specify module specifier used to import the JSX factory functions when using 'jsx: react-jsx*'. */,
    "moduleResolution": "node" /* Specify how TypeScript looks up a file from a given module specifier. */,
    "jsx": "preserve" /* Specify what JSX code is generated. */,
    "baseUrl": "." /* Specify the base directory to resolve non-relative module names. */,
    "esModuleInterop": true /* Emit additional JavaScript to ease support for importing*/,
    "forceConsistentCasingInFileNames": true /* Ensure that casing is correct in imports. */,
    "strict": false /* Enable all strict type-checking options. */,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "noEmit": true /* Disable emitting files from a compilation. */,
    "resolveJsonModule": true /* Enable importing .json files. */,
    "isolatedModules": true /* Ensure that each file can be safely transpiled without relying on other imports. */,
    "allowJs": true,
    "incremental": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
